@model BoardGameStore.Models.Purchase

<div class="container mt-4">
    <h1 class="text-center text-success">Purchase Successful!</h1>
    <div class="card mt-4">
        <div class="card-body text-center">
            <h2>Thank you for purchasing!</h2>
            <p>Your purchase for <strong>@Model.BoardGame.Title</strong> has been successfully processed.</p>
            <p><strong>Quantity:</strong> @Model.PurchaseQuantity</p>
            <p><strong>Total Cost:</strong> $@Model.Total</p>
            <a asp-action="Index" asp-controller="Home" class="btn btn-primary">Return to Home</a>
        </div>
    </div>
</div>
